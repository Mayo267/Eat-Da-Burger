<h1>Burgers!</h1>

<h2>Burgers that are devoured!</h2>

<li>
	{{name}}

	<button class="change-devoured" data-id="{{id}}" data-newDevour="{{devoured}}">
		{{#if devoured}}Eaten!{{else}}Devour!{{/if}}
	</button>

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>

<h2>Burgers that have not been devoured!</h2>

<li>
	{{name}}
    {{!-- {{burgers/name}} --}}
	<button class="change-devoured" data-id="{{id}}" data-newDevour="{{devoured}}">
		{{#if devoured}}Eaten!{{else}}Devour!{{/if}}
	</button>

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devour">Devoured?</label><br>
        <input type="radio" name="devour" value="0" checked> Not eaten!<br>
        <input type="radio" name="devour" value="1"> Devoured
    </div>

    <button type="submit">Add Burger</button>
</form>